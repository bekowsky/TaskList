
@{
    ViewBag.Title = "Projects";

}
@model TaskList.Models.User

<div class="col-md-8" style="padding-left:30px; height:20%">
    @{ 
      
        foreach (TaskList.Models.Project project in Model.Projects)
        {

            string id = "#DeleteProject" + project.Id;
            string id2 = "#InfoProject" + project.Id;
            string id3 = "#EditProject" + project.Id;
            <div class="row">
                <div clas="col-md-7" style="background-color:whitesmoke; width: 85%;">


                    <h3 id="ProjectName"><a class="text-primary" href="/@project.Key">@project.Name</a></h3>
                    <hr>
                    <h4 id="Description">@project.Describtion</h4>
                    <h4>Кооперация</h4>
                   

                </div>

                <div class="col-md-1">
                    <div class="btn-group-vertical">



                        <button type="button" style="height:48px" data-toggle="modal" data-target=@id class="btn btn-danger">Удалить</button>
                        <button type="button" style="height:48px" data-toggle="modal" data-target=@id2 class="btn btn-info">Свойства</button>
                        <button type="button" style="height:48px" data-toggle="modal" data-target=@id3 class="btn btn-warning">Изменить</button>


                    </div>
                </div>
            </div>

            <br> 
        
        }
        }
     

        <button type="button" data-toggle="modal" data-target="#CreateProject" class="btn btn-success btn-lg col-xs-offset-4">Создать проект</button>
    </div>



<div class="modal fade" id="CreateProject" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Создание проекта</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Название проекта</h3>
                <input class="form-control" id="NameCreateProject" style="min-width:90%" type="text" placeholder="Search">
            </div>
            <div class="modal-body">
                <h3>Описание</h3>
                <textarea class="form-control" id="DescriptionCreateProject" style="min-width:90%" rows="3"></textarea>
                <h3>Дата</h3>
                <input class="form-control" type="date" value="2019-02-11"  style="min-width:90%" id="example-date-input">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Отменить</button>
                <button type="button" class="btn btn-success" id="BtnCreateProjects">Создать</button>
            </div>
        </div>
    </div>
</div>


@{
   

    foreach (TaskList.Models.Project project in Model.Projects)
    {
        string modid = "DeleteProject" + project.Id;
        <div class="modal fade" id=@modid tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title" id="exampleModalLabel">Удаление проекта</h2>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3>Удалить проект?</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Отменить</button>
                        <button type="button"  class="BtnDelete btn btn-success" id=@modid>Удалить</button>
                    </div>
                </div>
            </div>
        </div>
       
    }
}

@{
   

    foreach (TaskList.Models.Project project in Model.Projects)
    {
     string   modid = "EditProject" + project.Id;
        <div class="modal fade" id=@modid tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title" id="exampleModalLabel">Изменение проекта</h2>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3>Название проекта</h3>
                        <input class="form-control" id="NameChangeProject" value="@project.Name" style="min-width:90%" type="text" placeholder="Search">
                    </div>
                    <div class="modal-body">
                        <h3>Описание проекта</h3>
                        <textarea class="form-control" id="DescriptionChangeProject" rows="3" style="min-width:90%" >@project.Describtion</textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Отменить</button>
                        <button type="button" class="btn btn-success" id="BtnEditProject">Сохранить</button>
                    </div>
                </div>
            </div>
        </div>

       
    }
}




       

@{
  



    foreach (TaskList.Models.Project project in Model.Projects)
    {
       string modid = "InfoProject" + project.Id;
        <div class="modal fade" id=@modid tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title" id="exampleModalLabel">ИНформация</h2>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    
                    <div class="form-group" style="padding-left:20px" >
                        <label for="WatchPermission">Кто может просматривать проект</label>
                        <select style="min-width:90%" id="WatchPermission" class="browser-default custom-select">

                            <option selected value="1">Все, у кого есть ссылка</option>
                            <option value="2">Пользователи, которых вы добавили</option>
                            <option value="3">Только вы</option>
                        </select>
                    </div>

                    <div class="form-group" style="padding-left:20px">
                        <label for="ChangePermission">Кто может изменять проект</label>
                        <select style="min-width:90%" id="ChangePermission" class="browser-default custom-select">

                            <option  value="1">Все, у кого есть ссылка</option>
                            <option selected value="2">Пользователи, которых вы добавили</option>
                            <option value="3">Только вы</option>
                        </select>
                    </div>

                    <div class="form-group" style="padding-left:20px">
                        <label for="SettingPermission">Кто может менять настройки проекта</label>
                        <select style="min-width:90%" id="SettingPermission" class="browser-default custom-select">

                            <option selected value="1">Все, у кого есть ссылка</option>
                            <option value="2">Пользователи, которых вы добавили</option>
                            <option selected value="3">Только вы</option>
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Отменить</button>
                        <button type="button" class="BtnInfo btn btn-success" id="@project.Id">Сохранить</button>
                    </div>
                </div>
                </div>
        </div>
        <script src="~/Scripts/Projects.js"></script>

      
    }
}